<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jk.memorysquare.StartGameActivity"
    tools:showIn="@layout/activity_start_game">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/redButton"
                android:layout_weight="1"
                android:src="@drawable/imagebuttonanimation"
                android:background="@color/myRed" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/yellowButton"
                android:src="@drawable/imagebuttonanimation"
                android:layout_weight="1"
                android:background="@color/myYellow" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/blueButton"
                android:src="@drawable/imagebuttonanimation"
                android:layout_weight="1"
                android:background="@color/myBlue" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/greenButton"
                android:src="@drawable/imagebuttonanimation"
                android:layout_weight="1"
                android:background="@color/myGreen" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/startButton"

        android:text="Start"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/startbuttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:clickable="false" />


</FrameLayout>
